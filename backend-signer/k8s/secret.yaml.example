# DO NOT COMMIT THIS FILE WITH ACTUAL SECRETS
# Copy this file to secret.yaml and fill in the actual base64-encoded values
# To encode: echo -n 'your-value' | base64

apiVersion: v1
kind: Secret
metadata:
  name: backend-signer-secrets
  namespace: yield-delta
  labels:
    app: backend-signer
type: Opaque
data:
  # Base64 encoded values
  signer-private-key: <base64-encoded-private-key>
  sei-rpc-url: <base64-encoded-rpc-url>
  dockerhub-username: <base64-encoded-dockerhub-username>
  dockerhub-password: <base64-encoded-dockerhub-password>

---
# Docker Registry Secret for pulling private images
apiVersion: v1
kind: Secret
metadata:
  name: dockerhub-secret
  namespace: yield-delta
type: kubernetes.io/dockerconfigjson
data:
  .dockerconfigjson: <base64-encoded-docker-config>