# ============================================
# PRODUCTION ENVIRONMENT VARIABLES FOR RAILWAY
# Set these in Railway dashboard
# ============================================

# Redis Configuration (Use your Redis instance)
REDIS_HOST=your-redis-host.com
REDIS_PORT=6379
REDIS_USERNAME=
REDIS_PASSWORD=your-redis-password

# API Configuration
PORT=8000  # Railway will override with $PORT
LOG_LEVEL=INFO
API_PREFIX=/api

# Model Configuration (Production)
MODEL_CACHE_TTL=7200  # 2 hours
MAX_BATCH_SIZE=64
MODEL_TIMEOUT=60

# Training Configuration (Production)
TRAIN_ON_START=false  # Train manually or via CI/CD
SKIP_MODEL_TRAINING=false
TRAINING_DATA_SOURCE=yfinance

# Monitoring (Production)
DRIFT_THRESHOLD=0.15  # Slightly higher for production
MONITORING_WINDOW_SIZE=5000
ALERT_RATE_LIMIT=60  # 1 hour between alerts

# External Services (Configure as needed)
SLACK_WEBHOOK=
DISCORD_WEBHOOK=
EMAIL_SMTP_HOST=smtp.sendgrid.net
EMAIL_SMTP_PORT=587
EMAIL_FROM_ADDRESS=alerts@yourdomain.com

# Model Storage (For S3/GCS model persistence)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET_NAME=your-ml-models
MODEL_STORAGE_PATH=production/models

# Production Settings
DEBUG=false
RELOAD=false

# CORS (Update with your frontend URL)
CORS_ORIGINS=https://your-frontend.vercel.app,https://your-domain.com